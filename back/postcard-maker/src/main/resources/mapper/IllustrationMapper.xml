<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.louie.coding.dao.IllustrationDao">
    <select id="getIllusWithPagination" parameterType="java.util.Map" resultType="com.louie.coding.entity.Illustration">
        select id, title, url
        from t_illustration
        where albumId = #{albumId}
        limit #{start}, #{size}
    </select>
</mapper>